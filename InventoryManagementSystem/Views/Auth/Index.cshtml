    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/Site.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Login</title>
</head>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4>Inventory Management System</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row offset-md-3" style="margin-top:5%">
            <div class="form-group col-md-7">
                @Html.LabelFor(model => model.u_username, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.u_username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.u_username, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="row offset-md-3">
            <div class="form-group col-md-7">
                @Html.LabelFor(model => model.u_password, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.u_password, "", new { @class = "text-danger" })
            </div>
        </div>








        <div class="row offset-md-3">
            <div class="form-group col-lg-7">
                <input type="submit" value="Create" class="btn btn-success btn-block" />
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Inventory Management System</p>

        </footer>
    </div>
}

