
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}



<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


<h2>Purchase Invoice</h2>


@using (Html.BeginForm())
{
    @Html.Label("Date")<br />
    <input type="date" id="datePicker" name="datePicker" /> <br />

    @Html.Label("Suppliers") <br />
    @Html.DropDownList("Supplier", ViewBag.suppList as SelectList)<br />

    <table>
        <tr>
            <th>
                Product
            </th>
            <th>
                Barcode
            </th>
            <th>
                Expiry
            </th>
            <th>
                No. of Cartoons
            </th>
            <th>
                Per Cartoon Quantity
            </th>
            <th>
                Buying Price
            </th>
            <th>

            </th>
        </tr>
        <tr>
            <td> @Html.Editor("ProductName")<br /></td>
            <td>
                @Html.Editor("ProductBarcode")<br />
            </td>

            <td>
                <input type="date" id="exdatePicker" name="exdatePicker" /> <br />
            </td>
            <td>
                @Html.Editor("CartoonTxt")<br />
            </td>
            <td>
                @Html.Editor("pieceTxt")<br />
            </td>
            <td>
                @Html.Editor("buyingTxt")<br />
            </td>
            <td>
                <input type="button" class="click" value="ADD" />
            </td>



        </tr>

    </table>
    <br />
    <table>
        <thead>
            <tr>
                <th>
                    Product
                </th>
                <th>
                    Barcode
                </th>
                <th>
                    Expiry
                </th>
                <th>
                    No. of Cartoons
                </th>
                <th>
                    Per Cartoon Quantity
                </th>
                <th>
                    Buying Price
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>

    <input type="button" name="remBtn" value="DELETE" class="del" />




}

