@model InventoryManagementSystem.category

@{
    ViewBag.Title = "Create";

  

        Layout = "~/Views/Shared/_sidePanelPage.cshtml";

}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>category</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.cat_name, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.cat_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cat_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cat_status, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-4">
            @Html.DropDownListFor(model => model.cat_status, ViewBag.abc as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.cat_status, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
            <input type="submit" value="Create" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
