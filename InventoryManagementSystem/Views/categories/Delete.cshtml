@model InventoryManagementSystem.category

@{
    ViewBag.Title = "Delete";
            Layout = "~/Views/Shared/_sidePanelPage.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.cat_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cat_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cat_status)
        </dt>

        <dd>
            @{
                if (Model.cat_status == Convert.ToByte(1))
                {
                    <text>Active</text>
                }
                else if (Model.cat_status == 0)
                {
                    <text>In Active</text>
                }

            }
            @*@Html.DisplayFor(model => model.cat_status)*@
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
